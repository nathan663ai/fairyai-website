{
  "name": "fairyai-website",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "postbuild": "react-snap",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "deploy": "npm run build && cd dist && git init && git add -A && git commit -m 'Deploy to GitHub Pages' && git push -f git@github.com:USERNAME/REPO.git main:gh-pages"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.86.0",
    "lucide-react": "^0.555.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "postcss": "^8.4.38",
    "react-snap": "^1.23.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.3.1"
  },
  "reactSnap": {
    "source": "docs",
    "destination": "docs",
    "include": [
      "/",
      "/how-it-works",
      "/features",
      "/stories",
      "/safety",
      "/privacy",
      "/terms",
      "/contact",
      "/delete-account",
      "/blog",
      "/blog/why-physical-books-still-matter",
      "/blog/bedtime-routine-that-works",
      "/blog/why-kids-ask-for-same-story",
      "/blog/magic-of-continuing-stories",
      "/blog/screen-time-before-bed-research",
      "/blog/when-to-start-reading-to-baby",
      "/blog/short-vs-long-bedtime-stories",
      "/blog/stories-help-children-process-emotions"
    ],
    "inlineCss": true,
    "puppeteerArgs": ["--no-sandbox", "--disable-setuid-sandbox"]
  }
}
